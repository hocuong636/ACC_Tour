@using Microsoft.EntityFrameworkCore
@inject ACC_Tour.Data.ApplicationDbContext _context
@{
    ViewData["Title"] = "Viết Đánh Giá";
}
@model Review

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 py-5">
    <div class="container">
        <h1 class="display-3 text-black mb-3 animated slideInDown">Viết Đánh Giá</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a class="text-black" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a class="text-black" asp-controller="Tour" asp-action="Index">Tour du lịch</a></li>
                <li class="breadcrumb-item text-black active" aria-current="page">Viết Đánh Giá</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Review Form Start -->
<div class="container-fluid booking py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-5">
                        @{
                            var tour = _context.Tours.Find(Model.TourId);
                        }

                        @if (tour != null)
                        {
                            <div class="mb-4">
                                <h5 class="card-title">Tour: <strong>@tour.Name</strong></h5>
                                <p class="text-muted mb-0">Giá: @tour.Price.ToString("N0") VNĐ/người</p>
                            </div>
                        }

                        <!-- Validation Errors -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <strong>Vui lòng kiểm tra lại thông tin:</strong>
                                <ul class="mb-0 mt-2">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        @foreach (var error in modelState.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </ul>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form asp-action="Create" method="post" class="needs-validation">
                            <input type="hidden" name="tourId" value="@Model.TourId" />
                            
                            <div class="mb-4">
                                <label for="rating" class="form-label">
                                    <i class="fas fa-star text-warning me-2"></i>
                                    <strong>Đánh Giá (1-5 sao)</strong>
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="rating-input">
                                    <select name="rating" class="form-select form-select-lg" required>
                                        <option value="">-- Chọn số sao --</option>
                                        <option value="1" selected="@(Model.Rating == 1)">⭐ 1 sao - Không tốt</option>
                                        <option value="2" selected="@(Model.Rating == 2)">⭐⭐ 2 sao - Tạm chấp nhận</option>
                                        <option value="3" selected="@(Model.Rating == 3)">⭐⭐⭐ 3 sao - Bình thường</option>
                                        <option value="4" selected="@(Model.Rating == 4)">⭐⭐⭐⭐ 4 sao - Tốt</option>
                                        <option value="5" selected="@(Model.Rating == 5)">⭐⭐⭐⭐⭐ 5 sao - Rất tốt</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="comment" class="form-label">
                                    <i class="fas fa-comment text-primary me-2"></i>
                                    <strong>Nhận Xét Chi Tiết</strong>
                                    <span class="text-danger">*</span>
                                </label>
                                <textarea name="comment" 
                                    class="form-control form-control-lg" 
                                    rows="6" 
                                    placeholder="Chia sẻ trải nghiệm của bạn về tour này. Bạn sẽ giúp các du khách khác có thêm thông tin để lựa chọn..."
                                    required
                                    minlength="10">@Model.Comment</textarea>
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Vui lòng nhập ít nhất 10 ký tự
                                </small>
                            </div>

                            <div class="d-grid gap-2 d-md-flex gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-check me-2"></i>Gửi Đánh Giá
                                </button>
                                <a asp-controller="Tour" asp-action="Details" asp-route-id="@Model.TourId" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Hủy
                                </a>
                            </div>
                        </form>

                        <div class="alert alert-info mt-4" role="alert">
                            <i class="fas fa-lightbulb me-2"></i>
                            <strong>Lưu ý:</strong> Đánh giá của bạn sẽ được kiểm duyệt trước khi hiển thị công khai.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Review Form End -->

<style>
    .rating-input select {
        cursor: pointer;
    }

    .rating-input select option {
        padding: 10px;
    }
</style>
