@model ACC_Tour.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}

<div class="col-11 col-sm-10 col-md-8 col-lg-7 col-xl-6">
    <div class="auth-box">
        <div class="auth-header">
       
            <h3 class="mb-0">Đăng ký tài khoản</h3>
            <p class="text-white-50 mb-0 mt-2">Vui lòng điền đầy đủ thông tin bên dưới để tạo tài khoản</p>
        </div>
        <div class="auth-body">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control" placeholder="Nhập họ" />
                            <label asp-for="FirstName">
                                <i class="bi bi-person"></i>
                                Họ
                            </label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control" placeholder="Nhập tên" />
                            <label asp-for="LastName">
                                <i class="bi bi-person"></i>
                                Tên
                            </label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">
                                <i class="bi bi-envelope"></i>
                                Email
                            </label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                            <label asp-for="Password">
                                <i class="bi bi-lock"></i>
                                Mật khẩu
                            </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
                            <label asp-for="ConfirmPassword">
                                <i class="bi bi-lock-fill"></i>
                                Xác nhận mật khẩu
                            </label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <label asp-for="DateOfBirth">
                                <i class="bi bi-calendar"></i>
                                Ngày sinh
                            </label>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                            <label asp-for="Address">
                                <i class="bi bi-geo-alt"></i>
                                Địa chỉ
                            </label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus me-2"></i>
                                Đăng ký
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="auth-footer">
            <div class="small">
                Đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="text-primary">Đăng nhập ngay</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
