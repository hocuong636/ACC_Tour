@model ACC_Tour.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_AuthLayout";
}

<div class="col-11 col-sm-8 col-md-6 col-lg-5 col-xl-4">
    <div class="auth-box">
        <div class="auth-header">
         
            <h3 class="mb-0">Đăng nhập</h3>
        </div>
        <div class="auth-body">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Email">
                        <i class="bi bi-envelope"></i>
                        Email
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                    <label asp-for="Password">
                        <i class="bi bi-lock"></i>
                        Mật khẩu
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Đăng nhập
                    </button>
                </div>
            </form>
        </div>
        <div class="auth-footer">
            <div class="small">
                Chưa có tài khoản? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-primary">Đăng ký ngay</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
