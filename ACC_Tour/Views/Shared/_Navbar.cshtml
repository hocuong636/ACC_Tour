
@using Microsoft.AspNetCore.Identity
@using ACC_Tour.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="container-fluid position-relative p-0" style="background: white;">
    <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0 shadow-sm" style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand p-0 d-flex align-items-center gap-2">
            <div class="d-inline-flex align-items-center justify-content-center" style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%); border-radius: 12px;">
                <i class="fas fa-map-location-dot text-white" style="font-size: 24px;"></i>
            </div>
            <div class="d-flex flex-column">
                <span class="fw-bold" style="font-size: 18px; color: #0F172A;">ACC Tour</span>
                <small class="text-secondary" style="font-size: 12px; letter-spacing: 0.5px;">Your Travel Companion</small>
            </div>
        </a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-label="Toggle navigation" style="box-shadow: none;">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0 fw-semibold gap-1">
                     <a asp-controller="Home" asp-action="Index"
                         class="nav-item nav-link px-3 py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-house-fill me-2"></i>Trang chủ
                </a>
                     <a asp-controller="Home" asp-action="About"
                         class="nav-item nav-link px-3 py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "active" : "")">
                    <i class="bi bi-info-circle-fill me-2"></i>Giới thiệu
                </a>
                     <a asp-controller="Tour" asp-action="Index"
                         class="nav-item nav-link px-3 py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tour" ? "active" : "")">
                    <i class="bi bi-compass-fill me-2"></i>Tours
                </a>
                     <a asp-controller="Home" asp-action="Blog"
                         class="nav-item nav-link px-3 py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Blog" ? "active" : "")">
                    <i class="bi bi-chat-fill me-2"></i>Blogs
                </a>
                     <a asp-controller="Home" asp-action="Booking"
                         class="nav-item nav-link px-3 py-2 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Booking" ? "active" : "")">
                    <i class="bi bi-calendar-check-fill me-2"></i>Đặt Tour
                </a>
            </div>
        </div>
    </nav>
</div>

<style>
    .nav-link {
        font-size: 15px;
        font-weight: 500;
        letter-spacing: 0.3px;
        background: none !important;
        border: none !important;
        box-shadow: none !important;
        color: var(--text-primary) !important;
    }

    .nav-link::before {
        display: none !important;
        content: none !important;
    }

    .nav-link:hover {
        background: none !important;
        border: none !important;
        box-shadow: none !important;
        color: var(--text-primary) !important;
    }

    .nav-link:hover::before {
        display: none !important;
        width: 0 !important;
    }

    /* Active state: blue text only */
    .nav-link.active {
        background: none !important;
        border: none !important;
        box-shadow: none !important;
        color: var(--primary) !important;
    }

    .nav-link.active::before {
        display: none !important;
        width: 0 !important;
    }

    @@media (max-width: 991.98px) {
        .nav-link {
            padding: 0.5rem 0.75rem !important;
            margin-bottom: 0.25rem;
        }
    }
</style>
