                <a class="btn btn-link text-light" asp-controller="Home" asp-action="About">Về chúng tôi</a>
                <a class="btn btn-link text-light" asp-controller="Tour" asp-action="Index">Tour du lịch</a>
                <a class="btn btn-link text-light" asp-controller="Home" asp-action="Services">Dịch vụ</a>
