@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model ACC_Tour.Models.Tour
@inject ACC_Tour.Data.ApplicationDbContext _context
@{
    ViewData["Title"] = "Chi tiết Tour";

}

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 py-5">
    <div class="container">
        <h1 class="display-3 text-black mb-3 animated slideInDown">Chi tiết Tour</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a class="text-black" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a class="text-black" asp-controller="Tour" asp-action="Index">Tour du lịch</a></li>
                <li class="breadcrumb-item text-black active" aria-current="page">Chi tiết Tour</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Alert Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <strong>Lỗi!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewBag.ShowError == true && ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <strong>Lỗi!</strong> @ViewBag.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show m-4" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>Thành công!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show m-4" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (ViewBag.ShowInfo == true && ViewBag.InfoMessage != null)
{
    <div class="alert alert-info alert-dismissible fade show m-4" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        @ViewBag.InfoMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Tour Detail Start -->
<div class="container-fluid booking py-5">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-8">
                <!-- Tour Main Image and Info -->
                <div class="card mb-5 shadow-sm">
                    <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
                    <div class="card-body">
                        <h2 class="card-title text-primary mb-4">@Model.Name</h2>
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>

                <!-- Tour Description Images -->
                @if (Model.DescriptionImages != null && Model.DescriptionImages.Any())
                {
                    <div class="mb-5">
                        <h4 class="mb-4">Hình ảnh Tour</h4>
                        <div class="row g-4">
                            @foreach (var image in Model.DescriptionImages)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100">
                                        <img src="@image.ImageFile" class="card-img-top" alt="Hình ảnh tour" style="height: 200px; object-fit: cover;">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Tour Schedule -->
                <div class="card mb-5 shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Lịch trình Tour</h4>
                        @{
                            var isPastStartDate = Model.StartDate.Date <= DateTime.Now.Date;
                            var isPastEndDate = Model.EndDate.Date < DateTime.Now.Date;
                        }
                        
                        @if (isPastStartDate)
                        {
                            <div class="alert @(isPastEndDate ? "alert-danger" : "alert-warning") mb-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Tour này đã @(isPastEndDate ? "kết thúc" : "khởi hành")</strong>
                                @if (isPastEndDate)
                                {
                                    <p class="mb-0 mt-2">Tour đã kết thúc vào ngày @Model.EndDate.ToString("dd/MM/yyyy").</p>
                                }
                                else
                                {
                                    <p class="mb-0 mt-2">Tour đã khởi hành vào ngày @Model.StartDate.ToString("dd/MM/yyyy").</p>
                                }
                            </div>
                        }
                        
                        <div class="row">
                            <div class="col-md-6">
                                <p>
                                    <i class="far fa-calendar-alt text-primary me-2"></i>
                                    <strong>Bắt đầu:</strong> @Model.StartDate.ToString("dd/MM/yyyy")
                                    @if (isPastStartDate && !isPastEndDate)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">Đã khởi hành</span>
                                    }
                                </p>
                                <p>
                                    <i class="far fa-calendar-alt text-primary me-2"></i>
                                    <strong>Kết thúc:</strong> @Model.EndDate.ToString("dd/MM/yyyy")
                                    @if (isPastEndDate)
                                    {
                                        <span class="badge bg-danger ms-2">Đã kết thúc</span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><i class="fas fa-users text-primary me-2"></i><strong>Số người còn lại:</strong> @Model.RemainingSlots / @Model.MaxParticipants người</p>
                                <p><i class="fas fa-money-bill-wave text-primary me-2"></i><strong>Giá tour:</strong> @Model.Price.ToString("N0") VNĐ/người</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews -->
                <div class="card mb-5 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h4 class="card-title mb-0">Đánh giá từ khách hàng</h4>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Review" asp-action="Create" asp-route-tourId="@Model.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-star me-2"></i>Viết đánh giá
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm">
                                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập để đánh giá
                                </a>
                            }
                        </div>
                        
                        <!-- Load approved reviews -->
                        @{
                            var approvedReviews = Model.Reviews?
                                .Where(r => r.IsApproved)
                                .OrderByDescending(r => r.ReviewDate)
                                .ToList() ?? new List<Review>();
                        }

                        @if (approvedReviews.Any())
                        {
                            <div class="reviews-list">
                                @foreach (var review in approvedReviews)
                                {
                                    <div class="review-item card mb-3 border-light">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div class="flex-grow-1">
                                                    <div class="mb-2">
                                                        @for (int i = 0; i < review.Rating; i++)
                                                        {
                                                            <span class="text-warning">⭐</span>
                                                        }
                                                        @for (int i = review.Rating; i < 5; i++)
                                                        {
                                                            <span class="text-secondary">☆</span>
                                                        }
                                                        <span class="ms-2 text-muted small">@review.Rating/5</span>
                                                    </div>
                                                    <h6 class="card-subtitle mb-1 text-dark">
                                                        <strong>@review.User.FullName</strong>
                                                    </h6>
                                                    <p class="text-muted small mb-2">
                                                        <i class="far fa-calendar me-1"></i>
                                                        @review.ReviewDate.ToString("dd/MM/yyyy HH:mm")
                                                    </p>
                                                </div>
                                                @if (User.Identity.IsAuthenticated && review.UserId == User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier))
                                                {
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm btn-outline-secondary" type="button" id="reviewMenu_@review.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <i class="fas fa-ellipsis-v"></i>
                                                        </button>
                                                        <ul class="dropdown-menu" aria-labelledby="reviewMenu_@review.Id">
                                                            <li>
                                                                <a class="dropdown-item" asp-controller="Review" asp-action="Edit" asp-route-id="@review.Id">
                                                                    <i class="fas fa-edit me-2"></i>Chỉnh sửa
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteReviewModal_@review.Id">
                                                                    <i class="fas fa-trash me-2"></i>Xóa
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                }
                                            </div>
                                            <p class="card-text">@review.Comment</p>
                                            
                                            @if (!string.IsNullOrEmpty(review.AdminResponse))
                                            {
                                                <div class="alert alert-light border-start border-primary mt-3 ps-3">
                                                    <strong class="text-primary">Phản hồi từ :</strong>
                                                    <p class="mb-0 mt-2">@review.AdminResponse</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                Chưa có đánh giá nào cho tour này.
                            </div>
                        }

                    </div>
                </div>

                <!-- Delete Review Modals -->
                @foreach (var review in approvedReviews)
                {
                    @if (User.Identity.IsAuthenticated && review.UserId == User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier))
                    {
                        <div class="modal fade" id="deleteReviewModal_@review.Id" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Xóa Đánh Giá</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Bạn có chắc chắn muốn xóa đánh giá này không? Hành động này không thể hoàn tác.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <form method="post" asp-controller="Review" asp-action="Delete" asp-route-id="@review.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-danger">Xóa</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Booking Form -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title text-center mb-4">Đặt Tour</h4>
                        @{
                            isPastStartDate = Model.StartDate.Date <= DateTime.Now.Date;
                            isPastEndDate = Model.EndDate.Date < DateTime.Now.Date;
                        }
                        
                        @if (isPastStartDate)
                        {
                            <div class="alert alert-warning mb-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Tour này đã @(isPastEndDate ? "kết thúc" : "khởi hành")</strong>
                                <p class="mb-0 mt-2 small">
                                    @if (isPastEndDate)
                                    {
                                        <span>Tour đã kết thúc vào ngày @Model.EndDate.ToString("dd/MM/yyyy"). Không thể đặt tour này.</span>
                                    }
                                    else
                                    {
                                        <span>Tour đã khởi hành vào ngày @Model.StartDate.ToString("dd/MM/yyyy"). Không thể đặt tour này.</span>
                                    }
                                </p>
                            </div>
                            <button class="btn btn-secondary w-100 py-3" disabled>
                                <i class="fas fa-ban me-2"></i>Không thể đặt tour
                            </button>
                        }
                        else if (!Model.IsActive || Model.RemainingSlots <= 0)
                        {
                            <div class="alert alert-danger mb-3">
                                <i class="fas fa-times-circle me-2"></i>
                                <strong>Tour này hiện không khả dụng</strong>
                                <p class="mb-0 mt-2 small">
                                    @if (Model.RemainingSlots <= 0)
                                    {
                                        <span>Tour đã hết chỗ.</span>
                                    }
                                    else
                                    {
                                        <span>Tour tạm thời không khả dụng.</span>
                                    }
                                </p>
                            </div>
                            <button class="btn btn-secondary w-100 py-3" disabled>
                                <i class="fas fa-ban me-2"></i>Không thể đặt tour
                            </button>
                        }
                        else
                        {
                            <div class="mb-3">
                                <p class="text-muted mb-2">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                    <strong>Ngày khởi hành:</strong> @Model.StartDate.ToString("dd/MM/yyyy")
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-users text-primary me-2"></i>
                                    <strong>Còn lại:</strong> @Model.RemainingSlots / @Model.MaxParticipants người
                                </p>
                            </div>
                            <a asp-controller="Booking" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-ticket-alt me-2"></i>Đặt ngay
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>