@model ACC_Tour.Models.Feedback

@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Đánh giá</h6>
            <h1 class="mb-5">Chỉnh sửa đánh giá</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-4">
                                <label asp-for="Title" class="form-label">Tiêu đề</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Content" class="form-label">Nội dung</label>
                                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Rating" class="form-label d-block">Đánh giá</label>
                                <div class="rating-input">
                                    @for (int i = 5; i >= 1; i--)
                                    {
                                        <input type="radio" id="star@(i)" name="Rating" value="@i" 
                                               @(Model.Rating == i ? "checked" : "") />
                                        <label for="star@(i)" title="@i sao">
                                            <i class="@(Model.Rating >= i ? "fas" : "far") fa-star"></i>
                                        </label>
                                    }
                                </div>
                                <span asp-validation-for="Rating" class="text-danger d-block"></span>
                            </div>

                            <div class="text-end">
                                <a asp-action="MyFeedbacks" class="btn btn-secondary me-2">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Lưu thay đổi
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Star rating system
            $('.rating-input input').on('change', function() {
                var $this = $(this);
                var $labels = $this.closest('.rating-input').find('label');
                
                $labels.each(function() {
                    var $label = $(this);
                    var $star = $label.find('i');
                    
                    if ($label.attr('for') === $this.attr('id') || 
                        parseInt($label.attr('for').replace('star', '')) > parseInt($this.val())) {
                        $star.removeClass('fas').addClass('far');
                    } else {
                        $star.removeClass('far').addClass('fas');
                    }
                });
            });

            // Hover effect
            $('.rating-input label').hover(
                function() {
                    var $this = $(this);
                    var $stars = $this.prevAll('label').addBack();
                    $stars.find('i').removeClass('far').addClass('fas');
                },
                function() {
                    var $container = $(this).closest('.rating-input');
                    var $checked = $container.find('input:checked');
                    var $labels = $container.find('label');
                    
                    $labels.find('i').removeClass('fas').addClass('far');
                    
                    if ($checked.length) {
                        var rating = parseInt($checked.val());
                        $labels.each(function() {
                            var $label = $(this);
                            if (parseInt($label.attr('for').replace('star', '')) <= rating) {
                                $label.find('i').removeClass('far').addClass('fas');
                            }
                        });
                    }
                }
            );
        });
    </script>
}

<style>
    .rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        font-size: 1.5rem;
    }

    .rating-input input {
        display: none;
    }

    .rating-input label {
        cursor: pointer;
        padding: 0 0.2em;
        color: var(--bs-warning);
    }

    .section-title {
        position: relative;
        display: inline-block;
        text-transform: uppercase;
    }

    .section-title::before {
        position: absolute;
        content: "";
        width: 45px;
        height: 2px;
        top: 50%;
        left: -55px;
        margin-top: -1px;
        background: var(--primary);
    }

    .section-title::after {
        position: absolute;
        content: "";
        width: 45px;
        height: 2px;
        top: 50%;
        right: -55px;
        margin-top: -1px;
        background: var(--primary);
    }
</style> 