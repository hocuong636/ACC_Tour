@{
    ViewData["Title"] = "Về chúng tôi";
}

<!-- About Start -->
<div class="carousel-header">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/img/carousel-2.jpg" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <div class="about-content">
                            <h1 class="display-2 text-capitalize text-white mb-4">Chào mừng đến với ACC Tour</h1>
                            <p class="mb-4">ACC Tour là đơn vị du lịch hàng đầu với hơn 10 năm kinh nghiệm trong lĩnh vực tổ chức tour du lịch trong và ngoài nước. Chúng tôi tự hào mang đến cho quý khách những trải nghiệm du lịch tuyệt vời với chất lượng dịch vụ cao cấp.</p>
                            <div class="row g-4 mb-4">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-check text-primary me-2"></i>
                                        <span>Đội ngũ hướng dẫn viên chuyên nghiệp</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-check text-primary me-2"></i>
                                        <span>Dịch vụ chất lượng cao</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-check text-primary me-2"></i>
                                        <span>Giá cả hợp lý</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-check text-primary me-2"></i>
                                        <span>An toàn tuyệt đối</span>
                                    </div>
                                </div>
                            </div>
                            <a href="~/Tour" class="btn btn-primary py-3 px-5">Tìm hiểu thêm</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About End -->

<!-- Feature Start -->
<div class="container-fluid feature py-5">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="feature-item rounded p-4">
                    <div class="feature-icon">
                        <i class="fa fa-map-marker-alt text-primary"></i>
                    </div>
                    <h4 class="mb-3">Điểm đến đa dạng</h4>
                    <p class="mb-0">Chúng tôi cung cấp các tour du lịch đến nhiều điểm đến hấp dẫn trong và ngoài nước.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-item rounded p-4">
                    <div class="feature-icon">
                        <i class="fa fa-hotel text-primary"></i>
                    </div>
                    <h4 class="mb-3">Khách sạn chất lượng</h4>
                    <p class="mb-0">Đối tác với các khách sạn 4-5 sao, đảm bảo nơi nghỉ ngơi thoải mái cho quý khách.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-item rounded p-4">
                    <div class="feature-icon">
                        <i class="fa fa-utensils text-primary"></i>
                    </div>
                    <h4 class="mb-3">Ẩm thực phong phú</h4>
                    <p class="mb-0">Thưởng thức các món ăn đặc sản địa phương với chất lượng cao.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->