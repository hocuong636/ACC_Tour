@{
    ViewData["Title"] = "Điểm đến";
}
<div class="carousel-header">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/img/carousel-2.jpg" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <div class="container-fluid page-header mb-5 py-5">
                            <div class="container">
                                <h1 class="display-3 text-white mb-3 animated slideInDown">Điểm đến</h1>
                                <p class="mb-4">Những điểm đến nổi tiếng trải dọc khắp đất nước của dịch vụ chúng tôi.</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page Header Start -->
</div>
<!-- Page Header End -->

<!-- Destination Start -->
<div class="container-fluid destination py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">Điểm đến</h5>
            <h1 class="mb-0">Điểm đến phổ biến</h1>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="destination-item">
                    <img class="img-fluid" src="~/img/destination-1.jpg" alt="">
                    <div class="destination-overlay p-4">
                        <a href="#" class="btn btn-primary text-white rounded-pill py-2 px-4">20 Tour</a>
                        <h5 class="text-white text-uppercase mb-2">Hạ Long</h5>
                        <span class="text-white">Di sản thiên nhiên thế giới</span>
                    </div>
                </div>
            </div>
            <!-- Thêm các điểm đến khác tương tự -->
        </div>
    </div>
</div>
<!-- Destination End -->
