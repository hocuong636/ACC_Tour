@model ACC_Tour.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="carousel-header">
    <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
            <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/img/carousel-2.jpg" class="img-fluid" alt="Image">
                <div class="carousel-caption">
                    <div class="p-3" style="max-width: 900px;">
                        <div class="text-center mb-5">
                            <h1 class="display-2 text-capitalize text-white mb-4">Liên hệ với chúng tôi</h1>
                            <p class="mb-0">Hãy liên hệ với chúng tôi nếu bạn có bất kỳ câu hỏi nào</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="bg-light rounded p-4">
                    <div class="d-flex align-items-center mb-4">
                        <i class="fa fa-map-marker-alt fa-2x text-primary flex-shrink-0"></i>
                        <div class="ms-3">
                            <h5 class="mb-0">Địa chỉ</h5>
                            <p class="mb-0">123 Đường ABC, Quận XYZ, TP.HCM</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <i class="fa fa-phone-alt fa-2x text-primary flex-shrink-0"></i>
                        <div class="ms-3">
                            <h5 class="mb-0">Điện thoại</h5>
                            <p class="mb-0">+84 123 456 789</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fa fa-envelope fa-2x text-primary flex-shrink-0"></i>
                        <div class="ms-3">
                            <h5 class="mb-0">Email</h5>
                            <p class="mb-0">info@acctour.com</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="bg-light rounded p-4">
                    <form asp-action="Contact" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Họ và tên">
                                    <label asp-for="Name">Họ và tên</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email">
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="Tiêu đề">
                                    <label asp-for="Subject">Tiêu đề</label>
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Message" class="form-control" placeholder="Nội dung" id="message" style="height: 150px"></textarea>
                                    <label asp-for="Message">Nội dung</label>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Gửi tin nhắn</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->

<!-- Google Map Start -->
