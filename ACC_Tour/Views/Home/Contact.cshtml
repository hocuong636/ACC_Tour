    <iframe class="w-100" style="height: 450px;"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
            frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
</div>
<!-- Google Map End -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Star rating system
            $('.rating-input input').on('change', function() {
                var $this = $(this);
                var $labels = $this.closest('.rating-input').find('label');
                
                $labels.each(function() {
                    var $label = $(this);
                    var $star = $label.find('i');
                    
                    if ($label.attr('for') === $this.attr('id') || 
                        parseInt($label.attr('for').replace('star', '')) > parseInt($this.val())) {
                        $star.removeClass('fas').addClass('far');
                    } else {
                        $star.removeClass('far').addClass('fas');
                    }
                });
            });

            // Hover effect
            $('.rating-input label').hover(
                function() {
                    var $this = $(this);
                    var $stars = $this.prevAll('label').addBack();
                    $stars.find('i').removeClass('far').addClass('fas');
                },
                function() {
                    var $container = $(this).closest('.rating-input');
                    var $checked = $container.find('input:checked');
                    var $labels = $container.find('label');
                    
                    $labels.find('i').removeClass('fas').addClass('far');
                    
                    if ($checked.length) {
                        var rating = parseInt($checked.val());
                        $labels.each(function() {
                            var $label = $(this);
                            if (parseInt($label.attr('for').replace('star', '')) <= rating) {
                                $label.find('i').removeClass('far').addClass('fas');
                            }
                        });
                    }
                }
            );
        });
    </script>
}

<style>
    .rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        font-size: 1.5rem;
    }

    .rating-input input {
        display: none;
    }

    .rating-input label {
        cursor: pointer;
        padding: 0 0.2em;
        color: var(--bs-warning);
    }
</style>
