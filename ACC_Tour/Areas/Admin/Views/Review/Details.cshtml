@using ACC_Tour.Models
@model Review

@{
    ViewData["Title"] = "Chi Tiết Đánh Giá";
    Layout = "_AdminLayout";
}

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 py-5">
    <div class="container">
        <h1 class="display-3 text-black mb-3 animated slideInDown">Chi Tiết Đánh Giá</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a class="text-black" asp-area="Admin" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                <li class="breadcrumb-item"><a class="text-black" asp-area="Admin" asp-controller="Review" asp-action="Index">Quản Lý Đánh Giá</a></li>
                <li class="breadcrumb-item text-black active" aria-current="page">Chi Tiết Đánh Giá</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Review Details Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <!-- Review Info Card -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h5 class="card-title mb-2">
                                    <strong>@Model.User.FullName</strong>
                                    <span class="text-muted ms-2 small">(@Model.User.Email)</span>
                                </h5>
                                <div class="rating mb-2">
                                    @for (int i = 0; i < Model.Rating; i++)
                                    {
                                        <span class="text-warning">⭐</span>
                                    }
                                    @for (int i = Model.Rating; i < 5; i++)
                                    {
                                        <span class="text-secondary">☆</span>
                                    }
                                    <span class="ms-2">@Model.Rating/5 Sao</span>
                                </div>
                                <p class="text-muted small mb-0">
                                    <i class="far fa-calendar me-1"></i>
                                    @Model.ReviewDate.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                            <div>
                                @if (Model.IsApproved)
                                {
                                    <span class="badge bg-success p-2">
                                        <i class="fas fa-check-circle me-1"></i>Đã Duyệt
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark p-2">
                                        <i class="fas fa-hourglass-half me-1"></i>Chờ Duyệt
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="mb-2"><strong>Tour:</strong></h6>
                            <a asp-area="Admin" asp-controller="Tour" asp-action="Details" asp-route-id="@Model.Tour.Id" class="link-primary">
                                <i class="fas fa-suitcase-rolling me-2"></i>@Model.Tour.Name
                            </a>
                        </div>

                        <div class="mb-4">
                            <h6 class="mb-2"><strong>Bình Luận:</strong></h6>
                            <div class="alert alert-light p-3 border">
                                @Model.Comment
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Admin Response Card -->
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">Phản Hồi Từ Admin</h6>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.AdminResponse))
                        {
                            <div class="alert alert-info p-3 border-start border-primary">
                                @Model.AdminResponse
                            </div>
                            <a asp-action="AddResponse" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Chỉnh Sửa Phản Hồi
                            </a>
                        }
                        else
                        {
                            <p class="text-muted mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Chưa có phản hồi từ admin.
                            </p>
                            <a asp-action="AddResponse" asp-route-id="@Model.Id" class="btn btn-primary btn-sm mt-3">
                                <i class="fas fa-plus me-1"></i>Thêm Phản Hồi
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Actions Sidebar -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Hành Động</h6>
                    </div>
                    <div class="card-body d-grid gap-2">
                        @if (!Model.IsApproved)
                        {
                            <a asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-success btn-lg" onclick="return confirm('Duyệt đánh giá này?');">
                                <i class="fas fa-check-circle me-2"></i>Duyệt Đánh Giá
                            </a>
                            <a asp-action="Reject" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                                <i class="fas fa-times-circle me-2"></i>Từ Chối Đánh Giá
                            </a>
                        }
                        <a asp-action="AddResponse" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                            <i class="fas fa-reply me-2"></i>Phản Hồi
                        </a>
                        <button type="button" class="btn btn-danger btn-lg" onclick="deleteReview(@Model.Id)">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Quay Lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Review Details End -->

<script>
function deleteReview(reviewId) {
    if (confirm('Bạn có chắc chắn muốn xóa đánh giá này không?')) {
        fetch(`/Admin/Review/Delete/${reviewId}`, {
            method: 'POST',
            headers: {
                'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '@Url.Action("Index", "Review", new { area = "Admin" })';
            } else {
                alert(data.message);
            }
        })
        .catch(error => console.error('Error:', error));
    }
}
</script>
