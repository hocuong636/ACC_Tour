<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link href="~/css/admin.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-dark text-white sidebar">
            <div class="sidebar-header p-3">
                <h5 class="mb-0">
                    <i class="fas fa-user-shield me-2"></i>
                    Admin Panel
                </h5>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Home">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Tour">
                        <i class="fas fa-route"></i> Quản lý Tour
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Booking">
                        <i class="fas fa-calendar-check"></i> Quản lý Đặt Tour
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/User">
                        <i class="fas fa-users"></i> Quản lý Người dùng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Report">
                        <i class="fas fa-university"></i> Báo cáo thống kê
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Blog">
                        <i class="fas fa-university"></i> Quản lý bài viết
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/FeedbackManagement">
                        <i class="fas fa-university"></i> Quản lý phản hồi
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="top-bar bg-white shadow-sm">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center py-2">
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                        <div class="user-info">
                            <span class="me-3">Xin chào, @User.Identity?.Name</span>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="content-wrapper p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 