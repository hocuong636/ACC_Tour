@model ACC_Tour.Models.Tour

@{
    ViewData["Title"] = "Chi tiết Tour";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Chi tiết Tour</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Home">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Tour">Quản lý Tour</a></li>
                    <li class="breadcrumb-item active">Chi tiết Tour</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="fas fa-edit me-2"></i>Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("N0") VNĐ</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.StartDate)</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.EndDate)</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaxParticipants)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaxParticipants)</dd>

                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Ngừng hoạt động</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Số lượng đặt</dt>
                        <dd class="col-sm-8">@(Model.Bookings?.Count ?? 0) lượt</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mt-3">
                    <h5>Hình ảnh</h5>
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;">
                </div>
            }

            <div class="mt-3">
                <h5>Mô tả</h5>
                <div class="p-3 bg-light rounded">
                    @Html.Raw(Model.Description?.Replace("\n", "<br>"))
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Xóa
                </a>
            </div>
        </div>
    </div>
</div> 