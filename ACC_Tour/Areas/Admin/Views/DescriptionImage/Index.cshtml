@model IEnumerable<ACC_Tour.Models.DescriptionImage>

@{
    ViewData["Title"] = "Description Images";
    Layout = "_AdminLayout";
}

<h1>Description Images</h1>
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">Quản lý hình ảnh mô tả</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Admin/Home">Dashboard</a></li>
                <li class="breadcrumb-item active">Quản lý hình ảnh mô tả</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm mới
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>URL</th>
            <th>Tour</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ImageFile</td>
                <td>@item.Tour?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

