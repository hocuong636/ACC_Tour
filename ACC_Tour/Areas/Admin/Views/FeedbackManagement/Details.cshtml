@model ACC_Tour.Models.Feedback

@{
    ViewData["Title"] = "Chi tiết phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết phản hồi</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Nội dung phản hồi</h6>
                    <div>
                        @if (Model.IsApproved)
                        {
                            <span class="badge badge-success">Đã duyệt</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">Chờ duyệt</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">@Model.Title</h5>
                    <div class="mb-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.Rating)
                            {
                                <i class="fas fa-star text-warning fa-lg"></i>
                            }
                            else
                            {
                                <i class="far fa-star text-warning fa-lg"></i>
                            }
                        }
                    </div>
                    <p class="card-text">@Model.Content</p>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted mb-1">Người gửi</label>
                        <p class="font-weight-bold mb-0">@Model.User.UserName</p>
                    </div>
                    @if (Model.Tour != null)
                    {
                        <div class="mb-3">
                            <label class="text-muted mb-1">Tour</label>
                            <p class="font-weight-bold mb-0">@Model.Tour.Name</p>
                        </div>
                    }
                    <div class="mb-3">
                        <label class="text-muted mb-1">Ngày tạo</label>
                        <p class="font-weight-bold mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        @if (!Model.IsApproved)
                        {
                            <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check mr-2"></i>Duyệt
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Reject" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-times mr-2"></i>Hủy duyệt
                                </button>
                            </form>
                        }
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                              class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa phản hồi này?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash mr-2"></i>Xóa
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        padding: 0.5em 0.75em;
        font-size: 0.9em;
    }

    .card-text {
        white-space: pre-line;
    }
</style> 